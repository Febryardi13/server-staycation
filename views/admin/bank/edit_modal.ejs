
  <!-- Modal -->
  <div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit Bank</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form action="/admin/bank?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Bank Name</label>
                    <input 
                        required 
                        type="text" 
                        class="form-control bankName" 
                        name="bankName" 
                        placeholder="Enter bank name"
                    >
                </div>
                <div class="form-group">
                    <label for="account">Bank Account</label>
                    <input 
                        required 
                        type="text" 
                        class="form-control rekeningNumber" 
                        name="rekeningNumber" 
                        placeholder="Enter account name"
                    >
                </div>
                <div class="form-group">
                    <label for="customer">Customer Name</label>
                    <input 
                        required 
                        type="text"
                        class="form-control name" 
                        name="name" 
                        placeholder="Enter customer name"
                    >
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" name="image">
                    <span>Choose picture for update image</span>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" class="id" name="id">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Edit Data</button>
            </div>
        </form>
      </div>
    </div>
  </div>